{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "network/*": ["src/network/*"],
      "views/*": ["src/views/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*.vue", "./src/**/*.js"]
}
